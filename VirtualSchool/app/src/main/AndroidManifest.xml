<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.virtualschool">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TeacherControl.Activities.dayAssignment"></activity>
        <activity android:name=".TeacherControl.Activities.viewRole" />
        <activity
            android:name=".TeacherGrp.Activities.teacherRole"
            android:label="Teacher Role" />
        <activity android:name=".TeacherControl.Activities.TeacherLogin" />
        <activity android:name=".TeacherControl.Activities.TeacherDashboard" />
        <activity android:name=".TeacherGrp.Activities.teacherList" />
        <activity android:name=".TeacherGrp.Activities.AddNewTeacher" />
        <activity
            android:name=".Organisation.Activities.MainDashboard"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".Organisation.Activities.OrgLogActivity" />
        <activity android:name=".Organisation.Activities.OrgActivity" />
        <activity
            android:name=".Navigation.HomeActivity"
            android:label="Home" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>